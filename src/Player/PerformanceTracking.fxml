<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" >
    <top>
        <Label layoutX="14.0" layoutY="14.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Performance Tracking" />
    </top>

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="800.0">
            <Label layoutX="14.0" layoutY="54.0" style="-fx-font-weight: bold;" text="Training Sessions" />
            <ListView layoutX="14.0" layoutY="80.0" prefHeight="120.0" prefWidth="200.0" />

            <Label layoutX="14.0" layoutY="220.0" style="-fx-font-weight: bold;" text="Match Statistics" />
            <ListView layoutX="14.0" layoutY="246.0" prefHeight="120.0" prefWidth="200.0" />

            <Label layoutX="260.0" layoutY="54.0" style="-fx-font-weight: bold;" text="Set Goals" />
            <HBox layoutX="260.0" layoutY="80.0" spacing="10.0">
                <TextArea prefHeight="80.0" prefWidth="200.0" />
                <Button text="Set Goal" />
            </HBox>

            <Label layoutX="260.0" layoutY="200.0" style="-fx-font-weight: bold;" text="Goal Progress" />
            <ProgressBar layoutX="260.0" layoutY="228.0" prefWidth="200.0" progress="0.0" />
            <ListView layoutX="260.0" layoutY="252.0" prefHeight="100.0" prefWidth="200.0">
                <CheckBox text="Goal 1" />
                <CheckBox text="Goal 2" />
                <!-- Add more CheckBoxes for additional goals -->
            </ListView>
        </AnchorPane>
    </center>
