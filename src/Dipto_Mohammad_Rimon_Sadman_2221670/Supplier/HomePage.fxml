<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: #f0f0f0;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="Supplier.HomePageController">
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #3F51B5; -fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Homepage" />
            <Separator style="-fx-background-color: white;" />
        </VBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button onAction="#handleCatalog" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px;" text="Catalog" />
            <Button onAction="#handleOrderManagement" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-size: 18px;" text="Order Management" />
            <Button onAction="#handleBillAndInvoice" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 18px;" text="Bill and Invoice" />
            <Button onAction="#handlePaymentStatus" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 18px;" text="Payment Status" />
            <Button onAction="#handleShippingAndLogistics" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 18px;" text="Shipping and Logistics" />
            <Button onAction="#handleFeedbackAndReviews" style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 18px;" text="Feedback and Reviews" />
            <Button onAction="#handleCustomerSupport" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 18px;" text="Customer Support" />
            <Button onAction="#handleProductSalesAndAnalytics" style="-fx-background-color: #795548; -fx-text-fill: white; -fx-font-size: 18px;" text="Product Sales and Analytics" />
        </VBox>
    </center>
</BorderPane>
