<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PlayerInjuryController">

    <!-- Title -->
    <Label layoutX="50" layoutY="30" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Injury Tracking" />

    <!-- Injury Details -->
    <VBox layoutX="50" layoutY="80" spacing="10">
        <Label text="Injury Type:" />
        <TextArea fx:id="injuryTypeTextArea" prefHeight="100" prefWidth="300" promptText="Enter injury type and description" style="-fx-background-color: lightblue;" />

        <Label text="Injury Severity:" />
        <TextArea fx:id="injurySeverityTextArea" prefHeight="100" prefWidth="300" promptText="Enter injury severity and details" style="-fx-background-color: lightblue;" />
    </VBox>

    <!-- Upload Document -->
    <VBox layoutX="400" layoutY="80" spacing="10">
        <Label text="Upload Medical Document:" />
        <Button onAction="#uploadDocument" style="-fx-background-color: black; -fx-text-fill: white;" text="Choose File" />

        <Label fx:id="selectedFileLabel" />
    </VBox>

    <!-- Rehabilitation Section -->
    <VBox layoutX="50" layoutY="220" spacing="10" />

    <!-- Back to Dashboard Button -->
    <Button layoutX="50" layoutY="400" onAction="#backToDashboard" style="-fx-background-color: #008080; -fx-text-fill: white;" text="Back to Dashboard" />
     <Button layoutX="409.0" layoutY="200.0" onAction="#scheduleRehabSessions" style="-fx-background-color: #008080; -fx-text-fill: white;" text="Schedule Sessions" />
     <Button layoutX="410.0" layoutY="262.0" onAction="#requestMedicalClearance" style="-fx-background-color: #008080; -fx-text-fill: white;" text="Request Medical Clearance" />
     <Label layoutX="410.0" layoutY="159.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Rehabilitation:" />

</AnchorPane>
