<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Title -->
    <Label layoutX="14.0" layoutY="14.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Player Section" />

    <!-- Recipient Selection -->
    <ComboBox fx:id="recipientCB" layoutX="260.0" layoutY="94.0" prefWidth="150.0" promptText="Select Recipient" />

    <!-- Received Messages Section -->
    <VBox layoutX="14.0" layoutY="94.0" spacing="10.0">
        <Label style="-fx-font-weight: bold;" text="Received Messages" />
        <ListView prefHeight="200.0" prefWidth="200.0" />
    </VBox>

    <!-- Send Message Section -->
    <VBox layoutX="260.0" layoutY="54.0" spacing="10.0" />

    <!-- Back to Dashboard Button -->
    <Button layoutX="14.0" layoutY="358.0" text="Back to Dashboard" />
     <Button layoutX="260.0" layoutY="311.0" onAction="#sendMessageOnMouseClicked" text="Send" />
     <TextArea layoutX="260.0" layoutY="165.0" prefHeight="100.0" prefWidth="200.0" />
     <Label layoutX="263.0" layoutY="132.0" style="-fx-font-weight: bold;" text="Write Message" />
</AnchorPane>
